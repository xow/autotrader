# AutoTrader Bot Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real credentials to version control

# Environment Configuration
AUTOTRADER_ENV=development  # development, staging, production

# BTCMarkets API Credentials
# Get these from https://app.btcmarkets.net/account/api-keys
BTCMARKETS_API_KEY=your_api_key_here
BTCMARKETS_API_SECRET=your_api_secret_here
BTCMARKETS_BASE_URL=https://api.btcmarkets.net/v3

# Trading Configuration
TRADING_INITIAL_BALANCE=10000.0
TRADING_TRADE_AMOUNT=0.01
TRADING_MARKET_PAIR=BTC-AUD

# Operational Configuration
DATA_COLLECTION_INTERVAL=60  # seconds
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ML Configuration
ML_SEQUENCE_LENGTH=20
ML_MAX_TRAINING_SAMPLES=2000

# File Paths (optional - will use defaults if not set)
# MODEL_FILENAME=autotrader_model.keras
# TRAINING_DATA_FILENAME=training_data.json
# STATE_FILENAME=trader_state.pkl
# LOG_FILE=autotrader.log
